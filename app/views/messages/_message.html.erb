  <div class="message-holder<%= sender ? " msg-right" : " msg-left" %>" id="message-<%= message.id %>">
    <div class="message-container d-flex align-items-start gap-3">
      <% unless sender %>
        <% if message.chatroom.mentor.avatar.attached? || message.chatroom.padawan.avatar.attached? %>
            <%= cl_image_tag message.chatroom.mentor.avatar.key, class: "avatar-message" %>
        <% else %>
          <%= image_tag asset_url("placeholder-avatar.png"), class: "avatar-message" %>
        <% end %>
      <% end %>
      <div class="message-body">
        <small>
          <strong><%= message.user.first_name %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
      <p class="message-content<%= sender ? " msg-yellow" : " msg-grey" %>"><%= message.content %></p>
      </div>
    </div>
  </div>
